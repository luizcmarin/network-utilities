{
    "name": "yiisoft/network-utilities",
    "type": "library",
    "description": "Network related utilities",
    "keywords": [
        "network",
        "ip",
        "mask",
        "dns"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/network-utilities/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/network-utilities"
    },
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.14",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.6"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\NetworkUtilities\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\NetworkUtilities\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    },
    "config": {
        "sort-packages": true
    }
}
